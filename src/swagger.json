{
  "openapi": "3.0.0",
  "info": {
    "title": "Atlas",
    "description": "Esta é uma documentação sobre a Atlas api",
    "version": "1.0.0",
    "contact": {
      "name": "Luis Henrique Machado",
      "email": "lhfam97@gmail.com"
    }
  },
  "paths": {
    "/users": {
      "post": {
        "tags": ["users"],
        "summary": "Cria um novo usuário",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "Luique",
                  "email": "luique@email.com"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Operação realizada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "admin": {
                      "type": "boolean"
                    },
                    "name": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "string"
                    },
                    "updated_at": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "id": "3d3c8bba-acfd-4dd6-a00e-bb2219eea896",
                    "admin": false,
                    "name": "Luique",
                    "created_at": "2021-05-15T20:43:42.430Z",
                    "updated_at": "2021-05-15T20:43:42.430Z"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Email já está sendo utilizado.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "error": "Email Already taken!"
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["users"],
        "summary": "Retorna todos os usuários",
        "description": "Somente o `admin` pode acessar",
        "parameters": [
          {
            "in": "header",
            "name": "user_id",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],

        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "admin": {
                        "type": "boolean"
                      },
                      "name": {
                        "type": "string"
                      },
                      "created_at": {
                        "type": "string"
                      },
                      "updated_at": {
                        "type": "string"
                      }
                    },
                    "example": {
                      "id": "3d3c8bba-acfd-4dd6-a00e-bb2219eea896",
                      "admin": false,
                      "name": "Luique",
                      "created_at": "2021-05-15T20:43:42.430Z",
                      "updated_at": "2021-05-15T20:43:42.430Z"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Usuário sem permissão ou usuário não encontrado.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": "string"
                  },
                  "example": {
                    "error": "User is not an admin!"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/{user_id}": {
      "get": {
        "tags": ["users"],
        "summary": "Retorna um usuário específico",
        "parameters": [
          {
            "in": "path",
            "name": "user_id",
            "required": true,
            "description": "ID do usuário",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Operação realizada com sucesso.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "admin": {
                      "type": "boolean"
                    },
                    "name": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "string"
                    },
                    "updated_at": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "id": "3d3c8bba-acfd-4dd6-a00e-bb2219eea896",
                    "admin": false,
                    "name": "Luique",
                    "created_at": "2021-05-15T20:43:42.430Z",
                    "updated_at": "2021-05-15T20:43:42.430Z"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Usuário não encontrado.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": "string"
                  },
                  "example": {
                    "error": "User not found"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/{user_id}/admin": {
      "patch": {
        "tags": ["users"],
        "summary": "Torna admin um usuário",
        "description": "Create a new specification",
        "parameters": [
          {
            "in": "path",
            "name": "user_id",
            "required": true,
            "description": "ID do usuário",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Operação realizada com sucesso.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "admin": {
                      "type": "boolean"
                    },
                    "name": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "string"
                    },
                    "updated_at": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "id": "3d3c8bba-acfd-4dd6-a00e-bb2219eea896",
                    "admin": false,
                    "name": "Luique",
                    "created_at": "2021-05-15T20:43:42.430Z",
                    "updated_at": "2021-05-15T20:43:42.430Z"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Usuário não encontrado.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": "string"
                  },
                  "example": {
                    "error": "User not found"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
